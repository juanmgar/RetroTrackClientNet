@model Game

<h1 class="mb-4">Detalles del Juego</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p><strong>Plataforma:</strong> @Model.Platform</p>
        <p><strong>Género:</strong> @Model.Genre</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="mt-3">
            <h5>Descripción:</h5>
            <p>@Model.Description</p>
        </div>
    }
    else
    {
        <p class="text-muted">La descripción se añadirá automáticamente.</p>
    }

    @if (!string.IsNullOrEmpty(Model.ScreenshotUrl))
    {
        <div class="mt-3">
            <h5>Imagen:</h5>
            <img src="@Model.ScreenshotUrl" alt="Screenshot" class="img-fluid" />
        }
    }
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>

@model IEnumerable<GameSession>

<h1>Sesiones de Juego</h1>

<table class="table">
    <thead>
        <tr>
            <th>Juego</th>
            <th>Jugador</th>
            <th>Fecha</th>
            <th>Minutos Jugados</th>
            <th>Screenshot</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.GameTitle</td>
                <td>@session.PlayerId</td>
                <td>@session.PlayedAt.ToShortDateString()</td>
                <td>@session.MinutesPlayed</td>
                <td>
                    <a class="btn btn-sm btn-primary"
                       href="http://localhost:5099/retrotrack/api/GameSessions/@session.Id/Screenshot"
                       target="_blank">
                        Descargar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<GameSession>

<h1>Sesiones de Juego</h1>

<table class="table">
    <thead>
        <tr>
            <th>Juego</th>
            <th>Jugador</th>
            <th>Fecha</th>
            <th>Minutos Jugados</th>
            <th>Screenshot</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.GameTitle</td>
                <td>@session.PlayerId</td>
                <td>@session.PlayedAt.ToShortDateString()</td>
                <td>@session.MinutesPlayed</td>
                <td>
                    @if (session.Screenshot != null && session.Screenshot.Length > 0)
                    {
                        <a class="btn btn-sm btn-primary"
                           href="@($"https://localhost:9095/rest/api/GameSessions/{session.Id}/Screenshot")" target="_blank">
                            Descargar
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">Sin screenshot</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

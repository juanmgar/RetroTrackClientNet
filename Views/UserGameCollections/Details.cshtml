@model UserGameCollection

<h1 class="mb-4">Detalles de la Colección</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Juego ID: @Model.GameId</h5>
        <p><strong>Usuario:</strong> @Model.User</p>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>

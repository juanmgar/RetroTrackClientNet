@model IEnumerable<UserGameCollection>
@{
    ViewData["Title"] = "Mi colección";
}

<h1 class="mb-4">Mi Colección de Juegos</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Game ID</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GameTitle</td>
                <td>
                    <a asp-action="Details" asp-controller="Games" asp-route-id="@item.GameId" class="btn btn-info btn-sm">Ver detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar de la colección</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Añadir Juego a la colección </a>
</p>

@model IEnumerable<UserGameCollection>
@{
    ViewData["Title"] = "Mi colección";
}

<h1 class="mb-4">Mi Colección de Juegos</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Game ID</th>
            <th>Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.GameId</td>
                <td>@item.User</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Añadir nuevo</a>
</p>

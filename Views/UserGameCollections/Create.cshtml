@model UserGameCollection
@{
    ViewData["Title"] = "Añadir a colección";
}

<h1 class="mb-4">Añadir a Colección</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="GameId" class="form-label">Juego</label>
        <select asp-for="GameId" class="form-select" asp-items="ViewBag.Games">
            <option value="">-- Selecciona un juego --</option>
        </select>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Añadir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
